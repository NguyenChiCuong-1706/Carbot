<?xml version="1.0"?>
<robot name="carbot" xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <xacro:property name="frame_ground_offset" value="0.02"/>
  <xacro:property name="diff_wheels_radius" value="0.0501"/>

  <!-- BASE LINK -->
  <link name="base_link">
  </link>

<!-- Footprint link -->
  <link name="base_footprint">
  </link>
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" />
    <parent link="base_link" />
    <child link="base_footprint" />
  </joint>

<!-- Chassis link -->
  <link name="chassis_link">
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://carbot/meshes/base_link.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
      </material>
    </visual>
    
    <inertial>
      <origin
        xyz="2.94902990916057E-17 -0.0519621145698546 -0.11319666441339"
        rpy="0 0 0" />
      <mass
        value="73.9732959024903" />
      <inertia
        ixx="7.4770569402914"
        ixy="1.11742454350262E-16"
        ixz="-3.11660956146003E-17"
        iyy="1.07779725747702"
        iyz="-0.19390857916837"
        izz="7.628441456232" />
    </inertial>

    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://carbot/meshes/base_link.STL" />
      </geometry>
    </collision>

  </link>
    <joint name="chassis_joint" type="fixed">
    <origin xyz="0 0 0" />
    <parent link="base_link" />
    <child link="chassis_link" />
  </joint>

<!-- Right-Drive link -->
  <link name="RD_link">
    <inertial>
      <origin
        xyz="-0.082144 5.5511E-17 -5.5916E-05"
        rpy="0 0 0" />
      <mass
        value="6.7723" />
      <inertia
        ixx="0.045319"
        ixy="1.2069E-20"
        ixz="-1.1116E-05"
        iyy="0.038062"
        iyz="-2.4619E-21"
        izz="0.038063" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://carbot/meshes/Link-right.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://carbot/meshes/Link-right.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="RD_joint"
    type="continuous">
    <origin
      xyz="0.2725 -0.26716 -0.26733"
      rpy="0 0 0" />
    <parent link="base_link" />
    <child link="RD_link" />
    <axis
      xyz="-1 0 0" />    
  </joint>

<!-- Left-Drive link -->
  <link name="LD_link">
    <inertial>
      <origin
        xyz="0.082144 3.0583E-05 4.6811E-05"
        rpy="0 0 0" />
      <mass
        value="6.7723" />
      <inertia
        ixx="0.045319"
        ixy="-6.0801E-06"
        ixz="-9.3064E-06"
        iyy="0.038062"
        iyz="8.0019E-07"
        izz="0.038063" />
    </inertial>

    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://carbot/meshes/Link-left.STL" />
      </geometry>
      <material
        name="">
        <color
          rgba="0.79216 0.81961 0.93333 1" />
      </material>
    </visual>

    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://carbot/meshes/Link-left.STL" />
      </geometry>
    </collision>
  </link>

  <joint name="LD_joint"
    type="continuous">
    <origin
      xyz="-0.2725 -0.26467 -0.25895"
      rpy="0 0 0" />
    <parent link="base_link" />
    <child link="LD_link" />
    <axis
      xyz="1 0 0" />
  </joint>

<!-- Colors macros -->
  <material name="white">
    <color rgba="1 1 1 1" />
  </material>

  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>

  <material name="blue">
    <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

</robot>